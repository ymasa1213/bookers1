<%= flash[:success] %>

<h1>Books</h1>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |f| %>
    <tr>
      <td><%= f.title %></td>
      <td><%= f.body %></td>
      <td><%= link_to "show", book_path(f.id) %></td>
      <td><%= link_to "edit", edit_book_path(f.id) %></td>
      <td><%= link_to "destroy", book_path(f.id), method: :delete, data: { confirm: 'Are you sure ?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>
<%= f.submit 'Create Book' %>
<% end %>

